<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/costTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30 pm"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        />
<TextView
    android:layout_marginTop="8dp"
    android:id="@+id/costDateTV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="29 Aug"
    android:textSize="20dp"
    android:layout_toLeftOf="@id/costTimeTV"
    android:layout_marginRight="60dp"

    />



    <TextView
        android:textStyle="bold"
        android:id="@+id/costDescriptionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="breakfast"
        android:textSize="25dp"
        android:layout_below="@id/costDateTV"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        />

    <TextView
        android:id="@+id/costamountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 tk"
        android:textSize="22dp"
        android:layout_below="@id/costDateTV"
        android:layout_toRightOf="@id/costDescriptionTV"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textStyle="italic"
        />






</RelativeLayout>